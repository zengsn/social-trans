<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.cst.dao.role.entity.Role" table="role">
		<id name="roleId" type="java.lang.String">
			<column name="role_id" length="32" />
			<generator class="uuid.hex" />
		</id>
		<property name="name" type="java.lang.String">
			<column name="name" length="20" not-null="true" />
		</property>
		<property name="state" type="java.lang.String">
			<column name="state" length="1" />
		</property>
		<!-- 设置懒加载lazy为false，这样rolePrivileges才能加载成功 -->
		<set name="rolePrivileges" inverse="true" lazy="false" cascade="save-update,delete">
			<key>
				<column name="role_id"></column>
			</key>
			<one-to-many class="com.cst.dao.role.entity.RolePrivilege"/>
		</set>
	</class>
</hibernate-mapping>